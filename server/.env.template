# Server Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Key (Required for LLM functionality)
OPENAI_API_KEY=your_openai_key_here

# Google Gemini API Key (Required for LLM functionality)
GOOGLE_API_KEY=your_gemini_key_here

# Google Maps API Key (Optional - for location services)
GOOGLE_MAPS_KEY=your_google_maps_key_here

# Server Port (Default: 8081)
PORT=8081

# Optional: Default model to use
DEFAULT_MODEL=gpt-4o-mini

# Optional: Enable debug logging
DEBUG=false

# Optional: GIN_MODE (debug/release)
GIN_MODE=debug

# AWS Configuration (Optional - for S3 bucket access)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# SSL Certificate Paths (Optional - for HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
